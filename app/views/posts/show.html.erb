<p id="notice"><%= notice %></p>

<h3><%= @post.titulo %></h3>

<p>
  <%= @post.contenido %>
</p>

<p> Comentarios: <%= @post.comments.count %> </p>

<%= @post.comments.each do |commentario|%>
  <p>De: <%=comentario.user.email%>
    <%=comentario.comment%> </p>
<%end%>
<br>

<%= link_to 'Editar', edit_post_path(@post) %> |
<%= link_to 'Volver', posts_path %>

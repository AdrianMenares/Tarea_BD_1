<p id="notice"><%= notice %></p>

<h3>Posts</h3>

<table class="striped">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h5><%= link_to post.titulo, post %><h5></td>
        <td><%=h truncate(post.contenido, :length => 80) %></td>
        <td>Por: <%= post.user.email %></td>
        <td><%= link_to 'Ver', post %></td>
        <td><%= link_to 'Editar', edit_post_path(post) %></td>
        <td><%= link_to 'Borrar', post, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
